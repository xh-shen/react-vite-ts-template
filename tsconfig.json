{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"composite": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"noImplicitAny": false,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"types": ["vite-plugin-svg-icons/client", "vite/client"],
		"paths": {
			"@": ["src"],
			"@/*": ["src/*"]
		}
	},

	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.json",
		"types/**/*.d.ts",
		"types/**/*.ts",
		"build/**/*.d.ts",
		"build/**/*.ts",
		"mock/**/*.ts",
		"package.json"
	],
	"exclude": ["node_modules", "dist", "**/*.js"]
}
